{% extends 'base.html.twig' %}

{% block title %}
   Hello TowerController!
{% endblock %}

{% block body %}

   <a href="{{ path('app_tower_create') }}">
      Create a new tower!
   </a>

   {% for tower in towers %}
      <div>
         {{ tower.name }}
         |
         {{ tower.damage }}
         |
         <a href="{{ path('app_tower_edit', { id: tower.id }) }}">
            Edit tower
         </a>
         <form action="{{ path('app_tower_delete', { id: tower.id }) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete_tower_' ~ tower.id) }}" />
            <input type="submit" value="Delete tower" />
         </form>
      </div>
   {% endfor %}

{% endblock %}
